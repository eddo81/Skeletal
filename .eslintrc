{
  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "globals": {
    "Promise": true,
    "Uint8Array": true,
    "ArrayBuffer": true,
    "FileReaderSync": true,
    "importScripts": true
  },

  "rules": {
    "no-empty": 0,
    "no-console": 0,
    "semi": 2,
    "curly": 2,
    "space-unary-ops": 2
  }
}